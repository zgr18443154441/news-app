<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shxt.news.module.menu.MenuActivity">

    <FrameLayout
        android:id="@+id/menu"
        android:layout_above="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_img_1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/news_on"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="头条"
                android:textSize="5sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_img_2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/class_off"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="板块"
                android:textSize="5sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_img_3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/topic_off"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="话题"
                android:textSize="5sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_img_4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/wechat_off"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="精选"
                android:textSize="5sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_img_5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/user_offline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我"
                android:textSize="5sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
